<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util-4.0.xsd">

    <bean id="messageSource"
          class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
          p:basenames="file:${conf.dir.path}/i18n/messages, /i18n/messages"
          p:defaultEncoding="UTF-8"
          p:fileEncodings="UTF-8"
          p:cacheSeconds="10"
          p:useCodeAsDefaultMessage="true"/>

    <bean id="localeResolver"
          class="org.springframework.web.servlet.i18n.CookieLocaleResolver"
          p:defaultLocale="uk"
          p:cookieName="_LOCALE" />

    <bean class="novotvir.conf.MyRepositoryRestMvcConfiguration" />

    <bean id="templateResolver"
          class="org.thymeleaf.templateresolver.ServletContextTemplateResolver"
          p:prefix=""
          p:suffix=""
          p:templateMode="HTML5"
          p:order="2"
          p:cacheable="false"/>

    <bean id="templateEngine"
          class="org.thymeleaf.spring4.SpringTemplateEngine"
          p:templateResolver-ref="templateResolver">
        <property name="additionalDialects">
            <set>
                <bean class="org.thymeleaf.extras.tiles2.dialect.TilesDialect"/>
            </set>
        </property>
    </bean>

    <bean class="org.thymeleaf.spring4.view.ThymeleafViewResolver"
          p:templateEngine-ref="templateEngine"
          p:viewClass="org.thymeleaf.extras.tiles2.spring4.web.view.ThymeleafTilesView"
          p:contentType="text/html; charset=UTF-8"
          p:staticVariables-ref="thymeleafViewResolverStaticVars"/>

    <util:map id="thymeleafViewResolverStaticVars" >
        <entry key="pass_salt" value="${pass_salt}" />
    </util:map>

    <bean id="tilesConfigurer"
          class="org.thymeleaf.extras.tiles2.spring4.web.configurer.ThymeleafTilesConfigurer">
        <property name="definitions">
            <list>
                <value>/WEB-INF/tiles-defs/template-defs.xml</value>
            </list>
        </property>
    </bean>

    <mvc:resources mapping="/assets/**" location="/assets/**" />

    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="org.springframework.web.servlet.mvc.WebContentInterceptor">
                <property name="cacheSeconds" value="0"/>
                <property name="useExpiresHeader" value="true"/>
                <property name="useCacheControlHeader" value="true"/>
                <property name="useCacheControlNoStore" value="true"/>
            </bean>
        </mvc:interceptor>

        <mvc:interceptor>
            <mvc:mapping path="/assets/**"/>
            <bean class="org.springframework.web.servlet.mvc.WebContentInterceptor">
                <!-- Cache for one week of all assets -->
                <property name="cacheSeconds" value="604800"/>
            </bean>
        </mvc:interceptor>
    </mvc:interceptors>

  <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer"
          p:locations-ref="appPropertiesLocations"
          p:ignoreUnresolvablePlaceholders="true"
          p:ignoreResourceNotFound="true" />

    <util:list id="appPropertiesLocations" value-type="org.springframework.core.io.Resource" >
        <value>file:${conf.dir.path}/app.properties</value>
        <value>WEB-INF/conf/app.properties</value>
    </util:list>

  <bean id="jacksonView"
        class="org.springframework.web.servlet.view.ContentNegotiatingViewResolver"
        p:order="1"
        p:contentNegotiationManager-ref="contentNegotiationManagerFactoryBean">
        <property name="defaultViews">
            <list>
                <bean class="org.springframework.web.servlet.view.json.MappingJackson2JsonView"/>
            </list>
        </property>
  </bean>

  <bean id="contentNegotiationManagerFactoryBean"
        class="org.springframework.web.accept.ContentNegotiationManagerFactoryBean"
        p:defaultContentType="application/json"/>

</beans>