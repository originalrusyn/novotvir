<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="novo.tvir.access.signup.activity.SignUpActivity_">

    <ProgressBar
            android:id="@+id/sign_up_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

    <ScrollView
            android:id="@+id/sign_up_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <fragment android:id="@+id/google_sign_up_fragment"
                      android:name="novo.tvir.access.signup.social.google.fragment.GoogleSignUpFragment_"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      tools:layout="@layout/fragment_google_signup"/>

            <fragment android:id="@+id/facebook_sign_up_fragment"
                      android:name="novo.tvir.access.signup.social.facebook.fragment.FacebookSignUpFragment_"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      tools:layout="@layout/fragment_facebook_signup"/>

            <fragment android:id="@+id/email_sign_up_fragment"
                      android:name="novo.tvir.access.signup.email.fragment.EmailSignUpFragment_"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      tools:layout="@layout/fragment_email_signup"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>



